<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="TKOfficialGUI.Views.PlayerProfile">
	
	<Border Width="100" Height="130" Background="LightGray" CornerRadius="8">
		<Grid RowDefinitions="* Auto Auto Auto" Margin="4">
			<TextBlock Grid.Row="0" Text="192.168.1.1" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"></TextBlock>
			<TextBlock Grid.Row="1" Text="VIP: False"></TextBlock>
			<TextBlock Grid.Row="2" Text="Connect date"></TextBlock>
			<TextBlock Grid.Row="3" Text="Pixels placed"></TextBlock>
		</Grid>
	</Border>
</UserControl>
